<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgound_image"
    android:gravity="center"
    tools:context=".Login">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/login_logo2"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:drawableLeft="@drawable/login_person_logo"
        android:drawablePadding="15dp"
        android:textSize="30sp"
        android:layout_margin="15dp"
        android:inputType="text"
        android:textColor="#7C062E"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/login_password_logo"
        android:drawablePadding="15dp"
        android:layout_margin="20dp"
        android:hint="Password"
        android:textSize="30sp"
        android:textColor="#7E0931"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/login_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:textSize="20sp"
        android:text="Log IN"/>

    <TextView
        android:id="@+id/signup_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Don't have account? Sign Up"
        android:textColor="#910434"
        android:textSize="25sp"/>


</LinearLayout>